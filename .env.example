# MCP Server Configuration
UCP_REGION=ZA
OPENAI_API_KEY=your_openai_key

# Shopify API Configuration (Required)
# These are used to automatically fetch and refresh access tokens
SHOPIFY_CLIENT_ID=your_shopify_client_id
SHOPIFY_CLIENT_SECRET=your_shopify_client_secret
# Note: SHOPIFY_ACCESS_TOKEN is no longer needed - tokens are fetched automatically

# MCP Server URL (for Chat Server to connect to MCP)
# Default: http://localhost:8080
MCP_SERVER_URL=http://localhost:8080

# Chat Server Configuration
CHAT_SERVER_ADDR=:8090
CHAT_DB_PATH=./chat_history.db

# Chat Server Public URL (for webhooks, callbacks, etc.)
# Example: https://your-chat-server.run.app
CHAT_SERVER_URL=

# Twilio Configuration (optional - for SMS support)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Google Cloud Configuration (for deployment)
PROJECT_ID=your-gcp-project-id
REGION=us-central1
SERVICE_ACCOUNT_NAME=ucp-service-account
SERVICE_ACCOUNT=ucp-service-account
